<?xml version="1.0"?>
<block>
  <name>DARC Layer 2 Sync</name>
  <key>darc_layer2_sync</key>
  <category>[DARC]</category>
  <import>import darc</import>
  <make>darc.layer2_sync($log, $debug)</make>
  <param>
    <name>Log Output</name>
    <key>log</key>
    <value>True</value>
    <type>enum</type>
    <option><name>True</name><key>True</key></option>
    <option><name>False</name><key>False</key></option>
  </param>
  <param>
    <name>Debug Output</name>
    <key>debug</key>
    <value>True</value>
    <type>enum</type>
    <option><name>True</name><key>True</key></option>
    <option><name>False</name><key>False</key></option>
  </param>
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>
  <source>
    <name>out</name>
    <type>byte</type>
    <vlen>36</vlen>
  </source>
</block>
